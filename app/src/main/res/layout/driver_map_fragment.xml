<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Driver.Fragments.DriverMapFragment">


  <fragment xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/map"
      android:name="com.google.android.gms.maps.SupportMapFragment" >
  </fragment>


  <android.support.v7.widget.AppCompatButton
      android:layout_above="@id/driverArrivedButton"
      android:id="@+id/driverUnbookButton"
      android:layout_gravity="bottom"
      android:layout_width="match_parent"
      android:textColor="@color/md_white_1000"
      android:layout_height="80dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:alpha="0.8"
      android:text="Unbook"
      android:textSize="28sp"
      android:textStyle="bold"
      app:backgroundTint="@color/colorPrimary"
      />

  <android.support.v7.widget.AppCompatButton
      android:id="@+id/driverArrivedButton"
      android:layout_alignParentBottom="true"
      android:layout_gravity="bottom"
      android:layout_width="match_parent"
      android:textColor="@color/md_white_1000"
      android:layout_height="80dp"
      android:layout_marginBottom="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:alpha="0.8"
      android:text="Arrived"
      android:textSize="28sp"
      android:textStyle="bold"
      app:backgroundTint="@color/colorPrimary"
      />



  <TextView
      android:lines="1"
      android:id="@+id/etaTextView"
      android:layout_marginStart="12dp"
      android:layout_margin="8dp"
      android:padding="8dp"
      android:textStyle="normal"
      android:textColor="@color/md_white_1000"
      android:background="@color/primary_dark"
      android:alpha="0.8"
      android:text="ETA : 11 mins"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

</RelativeLayout>